# .env.example
# Environment variables template for Astro WhatsApp Bot

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/astro-whatsapp-bot

# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_business_api_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_webhook_verification_token

# Payment Gateway Configuration
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Razorpay (India)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Twilio Configuration (for SMS and voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# External API Keys
# OpenAI API for AI Twin functionality
OPENAI_API_KEY=your_openai_api_key

# External Astrology API (replace with actual astrology service)
ASTROLOGY_API_KEY=your_astrology_api_key
ASTROLOGY_API_BASE_URL=https://api.astrology-service.com/v1

# Email Service Configuration
EMAIL_SERVICE_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/application.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_AI_TWIN_ENABLED=true
FEATURE_TRANSIT_TIMING_ENABLED=true
FEATURE_COMPATIBILITY_CHECKING_ENABLED=true
FEATURE_SOCIAL_NETWORKING_ENABLED=true

# Regional Settings
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000

# Render Deployment Configuration
RENDER_API_KEY=your_render_api_key_here
RENDER_SERVICE_ID=srv-d3v22avdiees73elebfg