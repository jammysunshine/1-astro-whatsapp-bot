{
  "name": "astro-whatsapp-bot",
  "version": "1.0.0",
  "description": "AI-powered astrology bot for WhatsApp with personalized readings and AI Twin",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "jest tests/e2e --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=tests/reports/coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/ tests/ --fix",
    "lint:check": "eslint src/ tests/",
    "format": "prettier --write src/ tests/ docs/",
    "format:check": "prettier --check src/ tests/ docs/",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "docs": "jsdoc -c jsdoc.json",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "astrology",
    "whatsapp",
    "bot",
    "ai",
    "personalized",
    "horoscope",
    "kundli"
  ],
  "author": "Astrology Bot Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "mongoose": "^7.6.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "twilio": "^4.19.0",
    "stripe": "^14.5.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "jsdoc": "^4.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "@types/jest": "^29.5.8",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "nyc": "^15.1.0",
    "coveralls": "^3.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jammysunshine/1-astro-whatsapp-bot.git"
  },
  "bugs": {
    "url": "https://github.com/jammysunshine/1-astro-whatsapp-bot/issues"
  },
  "homepage": "https://github.com/jammysunshine/1-astro-whatsapp-bot#readme",
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(js|jsx|ts|tsx)",
      "**/?(*.)+(spec|test).+(js|jsx|ts|tsx)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/server.js",
      "!src/config/**",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/*.d.ts"
    ],
    "coverageDirectory": "tests/reports/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/helpers/setup.js"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Astro WhatsApp Bot Test Report",
          "outputPath": "./tests/reports/test-report.html"
        }
      ],
      [
        "jest-junit",
        {
          "outputDirectory": "./tests/reports/junit"
        }
      ]
    ],
    "verbose": true,
    "notify": true,
    "notifyMode": "always",
    "testTimeout": 30000,
    "maxConcurrency": 5,
    "maxWorkers": "50%",
    "detectOpenHandles": true,
    "forceExit": true
  }
}