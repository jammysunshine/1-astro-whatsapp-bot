{
  "name": "astro-whatsapp-bot-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Astro WhatsApp Bot following BMAD methodology with 95%+ coverage requirement",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=tests/reports/coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:clearCache": "jest --clearCache",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --watch",
    "test:staged": "jest --findRelatedTests",
    "test:updateSnapshots": "jest --updateSnapshot"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nock": "^13.3.8",
    "sinon": "^17.0.1",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "axios-mock-adapter": "^1.22.0",
    "mongodb-memory-server": "^9.1.6",
    "mock-fs": "^5.2.0",
    "proxyquire": "^2.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "nyc": "^15.1.0",
    "coveralls": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**",
      "!src/**/node_modules/**"
    ],
    "coverageDirectory": "tests/reports/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/helpers/setup.js"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Astro WhatsApp Bot Test Report",
          "outputPath": "tests/reports/test-report.html"
        }
      ],
      [
        "jest-junit",
        {
          "outputDirectory": "tests/reports/junit"
        }
      ]
    ],
    "verbose": true,
    "notify": true,
    "notifyMode": "always",
    "testTimeout": 30000,
    "maxConcurrency": 5,
    "maxWorkers": "50%",
    "detectOpenHandles": true,
    "forceExit": true
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/server.js",
      "src/config/**",
      "node_modules/**",
      "tests/**"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "report-dir": "./tests/reports/nyc-coverage"
  }
}
